---
import { Image } from "astro:assets";
import Menu from "../components/ProfileCardMenu.astro"
import Footer from "../components/ProfileCardFooter.astro"
import { SITE_TITLE, SITE_DESCRIPTION, USER_NICKNAME, USER_DESCRIPTION, TRANSITION_API } from "../consts";
const {
  name,
  desc,
  includeSidebar = true,
  PageID,
} = Astro.props;
---

<div class="profile-card card bg-base-100 shadow-lg p-4">
  <div class="avatar px-6">
    <Image
      class=""
      format="webp"
      width={400}
      height={400}
      src="https://raw.githubusercontent.com/ynvYauneEnovore/personal-port/main/public/img/ynv.png"
      alt="YovanEnovore"
    />
  </div>
  <div class="profile-info">
  </div>
  <Menu PageID={PageID} />
  <Footer />
</div>